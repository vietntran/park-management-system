{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "include": ["**/*.ts", "**/*.tsx", "jest.setup.js", "jest.config.js"],
  "exclude": ["node_modules"]
}
